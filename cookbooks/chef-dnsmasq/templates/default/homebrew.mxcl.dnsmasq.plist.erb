<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple Computer//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
  <dict>
    <key>Label</key>
    <string>homebrew.mxcl.dnsmasq</string>

    <key>Chefsen</key>
    <dict>
      <key>Description</key>
      <string>Redirects *.dev DNS requests to localhost.</string>
    </dict>

    <key>ProgramArguments</key>
    <array>
      <string><%= node[:dnsmasq][:executable] %></string>
      <string>--conf-file=<%= node[:dnsmasq][:configfile] %></string>
      <string>--keep-in-foreground</string>
    </array>

    <key>RunAtLoad</key>
    <true />

    <key>KeepAlive</key>
    <dict>
      <key>NetworkState</key>
      <true/>
    </dict>

    <key>WorkingDirectory</key>
    <string><%= node[:dnsmasq][:datadir] %></string>

    <key>StandardErrorPath</key>
    <string><%= node[:dnsmasq][:logfile] %></string>

    <key>StandardOutPath</key>
    <string><%= node[:dnsmasq][:logfile] %></string>
  </dict>
</plist>
