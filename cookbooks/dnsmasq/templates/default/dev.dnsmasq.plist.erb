<?xml version="1.0" encoding="UTF-8"?>

<plist version="1.0">
  <dict>
    <key>Label</key>
    <string>dev.dnsmasq</string>

    <key>Boxen</key>
    <dict>
      <key>Description</key>
      <string>Redirects *.dev DNS requests to localhost.</string>
    </dict>

    <key>ProgramArguments</key>
    <array>
      <string><%= node[:dnsmasq][:executable] %></string>
      <string>--conf-file=<%= node[:dnsmasq][:configfile] %></string>
    </array>

    <key>RunAtLoad</key>
    <true />

    <key>KeepAlive</key>
    <true />

    <key>WorkingDirectory</key>
    <string><%= node[:dnsmasq][:datadir] %></string>

    <key>StandardErrorPath</key>
    <string><%= node[:dnsmasq][:logfile] %></string>

    <key>StandardOutPath</key>
    <string><%= node[:dnsmasq][:logfile] %></string>
  </dict>
</plist>